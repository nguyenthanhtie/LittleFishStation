@{
    ViewData["Title"] = "Menu Management";
    Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="flex h-screen">
    <!-- Sidebar -->
     <div class="w-64 bg-blue-800 text-white flex flex-col fixed top-0 left-0 h-full">
            <h1 class="text-2xl font-bold mb-6 text-center">Quản lý Món Ăn</h1>

        <nav class="flex-1">
            <div class="space-y-2">
                <a href="/Admin/Menu/Gia" class="w-full flex items-center space-x-3 p-3 rounded-lg text-left active-tab hover:bg-blue-700">
            <i class="fas fa-tags"></i>
            <span>Cấu hình Giá</span>
          </a>
          <a href="/Admin/Menu/Combo" class="w-full flex items-center space-x-3 p-3 rounded-lg text-left hover:bg-blue-700">
            <i class="fas fa-chart-bar"></i>
            <span>Combo</span>
          </a>
            </div>
        </nav>
        <div class="mt-auto pt-4 border-t border-blue-700 pb-16">
        <div class="flex items-center space-x-3 px-2 py-3 rounded-lg bg-blue-900">
          <img src="https://storage.googleapis.com/workspace-0f70711f-8b4e-4d94-86f1-2a93ccde5887/image/2e37b4f6-1d19-4331-b5f5-ad699657bb48.png" alt="User profile picture" class="rounded-full w-12 h-12 border-2 border-blue-400 shadow">
          <div>
            <div class="font-semibold text-lg leading-tight">Admin</div>
            <div class="text-xs text-blue-200 italic">Quản trị viên</div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Main Content -->
     <div class="ml-64 flex-1 overflow-auto p-6">
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-2xl font-bold text-gray-800">Quản lý Món ăn - Đồ uống</h2>
            <button id="addItemBtn" class="bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-md flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                </svg>
                Thêm món mới
            </button>
        </div>
        
        <!-- Tabs -->
        <div class="border-b border-gray-200 mb-6">
            <nav class="flex space-x-8">
                <button class="tab-btn py-2 px-1 border-b-2 font-medium text-sm border-indigo-500 text-indigo-600" data-tab="all">
                    Tất cả món
                </button>
                <button class="tab-btn py-2 px-1 border-b-2 font-medium text-sm border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300" data-tab="selling">
                    Đang bán
                </button>
                <button class="tab-btn py-2 px-1 border-b-2 font-medium text-sm border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300" data-tab="paused">
                    Tạm ngừng
                </button>
            </nav>
        </div>
        
        <!-- Search and Filter -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
            <div class="col-span-2">
                <div class="relative rounded-md shadow-sm">
                    <input type="text" class="block w-full pr-10 sm:text-sm border-gray-300 rounded-md p-2 border" placeholder="Tìm kiếm món ăn...">
                    <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                        </svg>
                    </div>
                </div>
            </div>
            <select class="block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md border">
                <option>Sắp xếp theo</option>
                <option>Tên A-Z</option>
                <option>Tên Z-A</option>
                <option>Giá tăng dần</option>
                <option>Giá giảm dần</option>
                <option>Ngày thêm mới</option>
            </select>
        </div>
        
        <!-- Tab Contents -->
        <div id="all" class="tab-content active">
            <!-- Product Grid -->
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                <!-- Product Card 1 -->
                <div class="product-card bg-white rounded-lg overflow-hidden shadow-md transition-all">
                    <div class="relative">
                        <img src="https://storage.googleapis.com/workspace-0f70711f-8b4e-4d94-86f1-2a93ccde5887/image/628e0f1c-6f24-47aa-b8a5-50f5323cf5ff.png" alt="Bánh mì thịt nướng với rau sống và nước sốt đặc trưng, bày trí trên đĩa gỗ tự nhiên" class="w-full h-48 object-cover">
                        <div class="absolute top-2 right-2">
                            <span class="bg-green-100 text-green-800 text-xs font-semibold px-2 py-1 rounded-full">Đang bán</span>
                        </div>
                    </div>
                    <div class="p-4">
                        <div class="flex justify-between items-start">
                            <h3 class="font-bold text-gray-800 mb-1">Bánh mì thịt nướng</h3>
                            <span class="font-bold text-indigo-600">35.000đ</span>
                        </div>
                        <p class="text-gray-600 text-sm mb-2">Đồ ăn</p>
                        <div class="flex justify-between items-center text-sm">
                            <div class="flex space-x-2">
                                <button class="text-indigo-600 hover:text-indigo-800">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h under-the-hood-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                    </svg>
                                </button>
                                <button class="text-red-600 hover:text-red-800">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                    </svg>
                                </button>
                            </div>
                            <div>
                                <label class="relative inline-flex items-center cursor-pointer">
                                    <input type="checkbox" checked class="sr-only peer">
                                    <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-indigo-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-indigo-600"></div>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Product Card 2 -->
                <div class="product-card bg-white rounded-lg overflow-hidden shadow-md transition-all">
                    <div class="relative">
                        <img src="https://storage.googleapis.com/workspace-0f70711f-8b4e-4d94-86f1-2a93ccde5887/image/4f213c00-cc25-4f17-b468-8cad7c625ac7.png" alt="Ly trà sữa trân châu đen với kem cheese foam trên cùng, đựng trong ly plastic trong suốt" class="w-full h-48 object-cover">
                        <div class="absolute top-2 right-2">
                            <span class="bg-green-100 text-green-800 text-xs font-semibold px-2 py-1 rounded-full">Đang bán</span>
                        </div>
                    </div>
                    <div class="p-4">
                        <div class="flex justify-between items-start">
                            <h3 class="font-bold text-gray-800 mb-1">Trà sữa trân châu</h3>
                            <span class="font-bold text-indigo-600">45.000đ</span>
                        </div>
                        <p class="text-gray-600 text-sm mb-2">Đồ uống</p>
                        <div class="flex justify-between items-center text-sm">
                            <div class="flex space-x-2">
                                <button class="text-indigo-600 hover:text-indigo-800">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                    </svg>
                                </button>
                                <button class="text-red-600 hover:text-red-800">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                    </svg>
                                </button>
                            </div>
                            <div>
                                <label class="relative inline-flex items-center cursor-pointer">
                                    <input type="checkbox" checked class="sr-only peer">
                                    <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-indigo-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-indigo-600"></div>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Product Card 3 (Combo Sample) -->
                <div class="product-card bg-white rounded-lg overflow-hidden shadow-md transition-all">
                    <div class="relative">
                        <img src="https://storage.googleapis.com/workspace-0f70711f-8b4e-4d94-86f1-2a93ccde5887/image/6c5471eb-85e2-432c-bfe2-dbea012bf2e7.png" alt="Combo bữa trưa gồm cơm, canh chua cá lóc, thịt kho tàu và rau xào, bố trí trên khay ăn gỗ" class="w-full h-48 object-cover">
                        <div class="absolute top-2 right-2">
                            <span class="bg-yellow-100 text-yellow-800 text-xs font-semibold px-2 py-1 rounded-full">Tạm ngừng</span>
                        </div>
                    </div>
                    <div class="p-4">
                        <div class="flex justify-between items-start">
                            <h3 class="font-bold text-gray-800 mb-1">Combo bữa trưa</h3>
                            <span class="font-bold text-indigo-600">75.000đ</span>
                        </div>
                        <p class="text-gray-600 text-sm mb-2">Combo</p>
                        <div class="flex justify-between items-center text-sm">
                            <div class="flex space-x-2">
                                <button class="text-indigo-600 hover:text-indigo-800">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                    </svg>
                                </button>
                                <button class="text-red-600 hover:text-red-800">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                    </svg>
                                </button>
                            </div>
                            <div>
                                <label class="relative inline-flex items-center cursor-pointer">
                                    <input type="checkbox" class="sr-only peer">
                                    <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-indigo-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-indigo-600"></div>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Add more product cards as needed -->
            </div>
        </div>
        
        <!-- Add/Edit Modal (Hidden by default) -->
        <div id="itemModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden z-50">
            <div class="bg-white rounded-lg p-6 w-full max-w-md">
                <div class="flex justify-between items-center mb-4">
                    <h3 class="text-lg font-bold">Thêm món mới</h3>
                    <button id="closeModalBtn" class="text-gray-500 hover:text-gray-700">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                    </button>
                </div>
                
                <form id="itemForm">
                    <div class="mb-4">
                        <label class="block text-gray-700 text-sm font-bold mb-2" for="name">
                            Tên món
                        </label>
                        <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="name" type="text" placeholder="Nhập tên món">
                    </div>
                    
                    <div class="grid grid-cols-2 gap-4 mb-4">
                        <div>
                            <label class="block text-gray-700 text-sm font-bold mb-2" for="price">
                                Giá (VNĐ)
                            </label>
                            <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="price" type="number" placeholder="Nhập giá">
                        </div>
                        
                        <div>
                            <label class="block text-gray-700 text-sm font-bold mb-2" for="category">
                                Loại
                            </label>
                            <select class="block w-full py-2 px-3 border rounded shadow text-gray-700 focus:outline-none focus:shadow-outline" id="category">
                                <option>Đồ ăn</option>
                                <option>Đồ uống</option>
                                <option>Combo</option>
                            </select>
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        <label class="block text-gray-700 text-sm font-bold mb-2" for="description">
                            Mô tả
                        </label>
                        <textarea class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="description" rows="3" placeholder="Mô tả món ăn"></textarea>
                    </div>
                    
                    <div class="mb-4">
                        <label class="block text-gray-700 text-sm font-bold mb-2" for="image">
                            Hình ảnh
                        </label>
                        <div class="flex items-center justify-center w-full">
                            <label class="flex flex-col w-full h-32 border-2 border-dashed hover:border-indigo-300 hover:bg-gray-100 rounded-md cursor-pointer">
                                <div class="flex flex-col items-center justify-center pt-7">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                    </svg>
                                    <p class="text-sm text-gray-500 pt-1">Click để upload hình ảnh</p>
                                </div>
                                <input type="file" class="opacity-0" id="image">
                            </label>
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        <label class="flex items-center">
                            <input type="checkbox" class="form-checkbox h-5 w-5 text-indigo-600">
                            <span class="ml-2 text-gray-700 text-sm">Đang phục vụ</span>
                        </label>
                    </div>
                    
                    <div class="flex justify-end space-x-3">
                        <button type="button" id="cancelBtn" class="bg-gray-300 hover:bg-gray-400 text-gray-800 py-2 px-4 rounded">
                            Hủy bỏ
                        </button>
                        <button type="submit" class="bg-indigo-600 hover:bg-indigo-700 text-white py-2 px-4 rounded">
                            Lưu lại
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

@section Scripts {
  <script src="~/js/menu-admin.js"></script>
}
