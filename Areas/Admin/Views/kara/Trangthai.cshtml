@{
   Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Cấu hình Trạng thái Karaoke";
}
  <div class="flex h-screen">
    <!-- Sidebar Navigation -->
     <div class="w-64 bg-blue-800 text-white flex flex-col fixed top-0 left-0 h-full">
      <h1 class="text-2xl font-bold mb-6 text-center">Quản Lý Karaoke</h1>
      
      <nav class="flex-1">
        <div class="space-y-2">
          <a href="/Admin/Kara/DanhSachPhong" class="w-full flex items-center space-x-3 p-3 rounded-lg text-left hover:bg-blue-700">
            <i class="fas fa-door-open"></i>
            <span>Quản lý phòng</span>
          </a>
          <a href="/Admin/Kara/Gia" class="w-full flex items-center space-x-3 p-3 rounded-lg text-left hover:bg-blue-700">
            <i class="fas fa-tags"></i>
            <span>Cấu hình giá</span>
          </a>
          <button class="w-full flex items-center space-x-3 p-3 rounded-lg text-left hover:bg-blue-700 active-tab">
            <i class="fas fa-chart-bar"></i>
            <span>Trạng thái phòng</span>
          </button>
          <a href="/Admin/Kara/LichSu" class="w-full flex items-center space-x-3 p-3 rounded-lg text-left hover:bg-blue-700">
            <i class="fas fa-history"></i>
            <span>Lịch sử sử dụng</span>
          </a>
        </div>
      </nav>
      
      <div class="mt-auto pt-4 border-t border-blue-700 pb-16">
        <div class="flex items-center space-x-3 px-2 py-3 rounded-lg bg-blue-900">
          <img src="https://storage.googleapis.com/workspace-0f70711f-8b4e-4d94-86f1-2a93ccde5887/image/2e37b4f6-1d19-4331-b5f5-ad699657bb48.png" alt="User profile picture" class="rounded-full w-12 h-12 border-2 border-blue-400 shadow">
          <div>
            <div class="font-semibold text-lg leading-tight">Admin</div>
            <div class="text-xs text-blue-200 italic">Quản trị viên</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Main Content Area -->
     <div class="ml-64 flex-1 overflow-auto p-6">
      <!-- Room Status Section -->
      <div>
        <h2 class="text-2xl font-bold text-gray-800 mb-6">Tổng quan trạng thái phòng</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-6">
          <div class="bg-white p-6 rounded-lg shadow">
            <div class="flex justify-between">
              <h3 class="text-lg font-medium">Phòng trống</h3>
              <span class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm">5</span>
            </div>
            <div class="mt-4 space-y-2">
              <div class="flex justify-between text-sm">
                <span>KR101 - VIP Room 1</span>
                <button class="text-blue-600">Chi tiết</button>
              </div>
              <div class="flex justify-between text-sm">
                <span>KR103 - VIP Room 3</span>
                <button class="text-blue-600">Chi tiết</button>
              </div>
              <div class="flex justify-between text-sm">
                <span>KR202 - Deluxe Room</span>
                <button class="text-blue-600">Chi tiết</button>
              </div>
            </div>
          </div>
          
          <div class="bg-white p-6 rounded-lg shadow">
            <div class="flex justify-between">
              <h3 class="text-lg font-medium">Phòng đang sử dụng</h3>
              <span class="bg-red-100 text-red-800 px-3 py-1 rounded-full text-sm">3</span>
            </div>
            <div class="mt-4 space-y-2">
              <div class="flex justify-between text-sm">
                <span>KR102 - VIP Room 2</span>
                <div>
                  <span class="text-gray-500 mr-2">Còn lại: 1:45h</span>
                  <button class="text-blue-600">Chi tiết</button>
                </div>
              </div>
              <div class="flex justify-between text-sm">
                <span>KR203 - Deluxe Room</span>
                <div>
                  <span class="text-gray-500 mr-2">Còn lại: 0:30h</span>
                  <button class="text-blue-600">Chi tiết</button>
                </div>
              </div>
            </div>
          </div>
          
          <div class="bg-white p-6 rounded-lg shadow">
            <div class="flex justify-between">
              <h3 class="text-lg font-medium">Phòng đã đặt trước</h3>
              <span class="bg-yellow-100 text-yellow-800 px-3 py-1 rounded-full text-sm">2</span>
            </div>
            <div class="mt-4 space-y-2">
              <div class="flex justify-between text-sm">
                <span>KR201 - Deluxe Room</span>
                <div>
                  <span class="text-gray-500 mr-2">Bắt đầu trong: 0:15h</span>
                  <button class="text-blue-600">Chi tiết</button>
                </div>
              </div>
              <div class="flex justify-between text-sm">
                <span>KR301 - Party Room</span>
                <div>
                  <span class="text-gray-500 mr-2">Bắt đầu trong: 2:30h</span>
                  <button class="text-blue-600">Chi tiết</button>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <div class="bg-white p-6 rounded-lg shadow">
          <div class="flex justify-between items-center mb-4">
            <h3 class="text-lg font-medium">Chi tiết trạng thái phòng theo thời gian</h3>
            <div class="flex space-x-2">
              <button class="border px-3 py-1 rounded">Hôm nay</button>
              <button class="border px-3 py-1 rounded">Ngày mai</button>
              <button class="border px-3 py-1 rounded">Xem tuần</button>
            </div>
          </div>
          
          <div class="overflow-x-auto">
            <table class="min-w-full">
              <thead>
                <tr>
                  <th class="px-4 py-2 text-left text-sm font-medium text-gray-500">Phòng</th>
                  <th class="px-4 py-2 text-center text-sm font-medium text-gray-500">08:00</th>
                  <th class="px-4 py-2 text-center text-sm font-medium text-gray-500">09:00</th>
                  <th class="px-4 py-2 text-center text-sm font-medium text-gray-500">10:00</th>
                  <th class="px-4 py-2 text-center text-sm font-medium text-gray-500">11:00</th>
                  <th class="px-4 py-2 text-center text-sm font-medium text-gray-500">12:00</th>
                  <th class="px-4 py-2 text-center text-sm font-medium text-gray-500">13:00</th>
                  <th class="px-4 py-2 text-center text-sm font-medium text-gray-500">14:00</th>
                  <th class="px-4 py-2 text-center text-sm font-medium text-gray-500">15:00</th>
                  <th class="px-4 py-2 text-center text-sm font-medium text-gray-500">16:00</th>
                  <th class="px-4 py-2 text-center text-sm font-medium text-gray-500">17:00</th>
                  <th class="px-4 py-2 text-center text-sm font-medium text-gray-500">18:00</th>
                  <th class="px-4 py-2 text-center text-sm font-medium text-gray-500">19:00</th>
                  <th class="px-4 py-2 text-center text-sm font-medium text-gray-500">20:00</th>
                  <th class="px-4 py-2 text-center text-sm font-medium text-gray-500">21:00</th>
                  <th class="px-4 py-2 text-center text-sm font-medium text-gray-500">22:00</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td class="px-4 py-2 text-sm font-medium text-gray-700 border-b">KR101</td>
                  <td colspan="3" class="bg-green-100 text-center border-b">Trống</td>
                  <td colspan="2" class="bg-yellow-100 text-center border-b">Đã đặt</td>
                  <td colspan="4" class="bg-red-100 text-center border-b">Đang sử dụng</td>
                  <td colspan="2" class="bg-green-100 text-center border-b">Trống</td>
                  <td colspan="4" class="bg-yellow-100 text-center border-b">Đã đặt</td>
                </tr>
                <tr>
                  <td class="px-4 py-2 text-sm font-medium text-gray-700 border-b">KR102</td>
                  <td colspan="6" class="bg-green-100 text-center border-b">Trống</td>
                  <td colspan="5" class="bg-red-100 text-center border-b">Đang sử dụng</td>
                  <td colspan="4" class="bg-green-100 text-center border-b">Trống</td>
                </tr>
                <tr>
                  <td class="px-4 py-2 text-sm font-medium text-gray-700 border-b">KR201</td>
                  <td colspan="4" class="bg-red-100 text-center border-b">Đang sử dụng</td>
                  <td colspan="8" class="bg-green-100 text-center border-b">Trống</td>
                  <td colspan="3" class="bg-red-100 text-center border-b">Đang sử dụng</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Room Map Section -->
  <div class="bg-white rounded-lg shadow p-6 mb-6">
    <h3 class="text-lg font-semibold mb-4">Bản đồ phòng karaoke</h3>
    <div id="roomMap" class="relative">
      <!-- Draggable rooms will be injected here by JavaScript -->
    </div>
  </div>


@section Scripts {
  <script src="~/js/kara-admin.js"></script>
}