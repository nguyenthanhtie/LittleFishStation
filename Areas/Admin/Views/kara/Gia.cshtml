@{
    Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Cấu hình Giá Karaoke";
}

<div class="flex h-screen">
    <!-- Sidebar Navigation -->
    <div class="w-64 bg-blue-800 text-white flex flex-col fixed top-0 left-0 h-full">
        <h1 class="text-2xl font-bold mb-6 text-center">Quản Lý Karaoke</h1>
        <nav class="flex-1">
            <div class="space-y-2">
                <a href="/Admin/Kara/DanhSachPhong" class="w-full flex items-center space-x-3 p-3 rounded-lg text-left hover:bg-blue-700">
                    <i class="fas fa-door-open"></i>
                    <span>Quản lý phòng</span>
                </a>
                <button class="w-full flex items-center space-x-3 p-3 rounded-lg text-left hover:bg-blue-700 active-tab">
                    <i class="fas fa-tags"></i>
                    <span>Cấu hình giá</span>
                </button>
                <a href="/Admin/Kara/TrangThai" class="w-full flex items-center space-x-3 p-3 rounded-lg text-left hover:bg-blue-700">
                    <i class="fas fa-chart-bar"></i>
                    <span>Trạng thái phòng</span>
                </a>
                <a href="/Admin/Kara/LichSu" class="w-full flex items-center space-x-3 p-3 rounded-lg text-left hover:bg-blue-700">
                    <i class="fas fa-history"></i>
                    <span>Lịch sử sử dụng</span>
                </a>
            </div>
        </nav>
        <div class="mt-auto pt-4 border-t border-blue-700 pb-16">
            <div class="flex items-center space-x-3 px-2 py-3 rounded-lg bg-blue-900">
                <img src="https://storage.googleapis.com/workspace-0f70711f-8b4e-4d94-86f1-2a93ccde5887/image/2e37b4f6-1d19-4331-b5f5-ad699657bb48.png" alt="User profile picture" class="rounded-full w-12 h-12 border-2 border-blue-400 shadow">
                <div>
                    <div class="font-semibold text-lg leading-tight">Admin</div>
                    <div class="text-xs text-blue-200 italic">Quản trị viên</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content Area -->
     <div class="ml-64 flex-1 overflow-auto p-6">
        <!-- Price Configuration Section -->
        <div>
            <div class="bg-white rounded-lg shadow p-6 mb-6">
                <h3 class="text-lg font-semibold mb-4">Giá theo Loại Phòng</h3>
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-100">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Loại Phòng</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Giờ thường (6h-18h)</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Giờ đêm (18h-6h)</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ngày lễ</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Hành động</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap">VIP</td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <input type="number" class="border rounded px-2 py-1 w-20" value="100000"> đ/giờ
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <input type="number" class="border rounded px-2 py-1 w-20" value="150000"> đ/giờ
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <input type="number" class="border rounded px-2 py-1 w-20" value="180000"> đ/giờ
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <button class="text-blue-600 hover:text-blue-900">
                                    Lưu
                                </button>
                            </td>
                        </tr>
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap">Deluxe</td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <input type="number" class="border rounded px-2 py-1 w-20" value="70000"> đ/giờ
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <input type="number" class="border rounded px-2 py-1 w-20" value="90000"> đ/giờ
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <input type="number" class="border rounded px-2 py-1 w-20" value="100000"> đ/giờ
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <button class="text-blue-600 hover:text-blue-900">
                                    Lưu
                                </button>
                            </td>
                        </tr>
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap">Party</td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <input type="number" class="border rounded px-2 py-1 w-20" value="120000"> đ/giờ
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <input type="number" class="border rounded px-2 py-1 w-20" value="170000"> đ/giờ
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <input type="number" class="border rounded px-2 py-1 w-20" value="200000"> đ/giờ
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <button class="text-blue-600 hover:text-blue-900">
                                    Lưu
                                </button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="bg-white rounded-lg shadow p-6">
                <h3 class="text-lg font-semibold mb-4">Thêm khung giá mới</h3>
                <div class="grid grid-cols-2 gap-6">
                    <div>
                        <label class="block text-sm font-medium mb-1">Loại Phòng</label>
                        <select class="w-full border rounded px-3 py-2">
                            <option>VIP</option>
                            <option>Deluxe</option>
                            <option>Party</option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-medium mb-1">Khung giờ</label>
                        <select class="w-full border rounded px-3 py-2">
                            <option>Giờ thường (6h-18h)</option>
                            <option>Giờ đêm (18h-6h)</option>
                            <option>Ngày lễ</option>
                            <option>Khung giờ tùy chỉnh</option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-medium mb-1">Giá (đ/giờ)</label>
                        <input type="number" class="w-full border rounded px-3 py-2" placeholder="Nhập giá">
                    </div>
                    <div class="flex items-end">
                        <button class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 w-full">
                            Thêm Khung Giá
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/Admin/kara-admin.js"></script>
}