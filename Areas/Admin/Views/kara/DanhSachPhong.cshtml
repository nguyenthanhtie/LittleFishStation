@{
    Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Quản lý phòng Karaoke";
}
  <div class="flex h-screen">
    <!-- Sidebar Navigation -->
    <div class="w-64 bg-blue-800 text-white flex flex-col fixed top-0 left-0 h-full">
      <h1 class="text-2xl font-bold mb-6 text-center">Quản Lý Karaoke</h1>
      
      <nav class="flex-1">
        <div class="space-y-2">
          <button class="w-full flex items-center space-x-3 p-3 rounded-lg text-left hover:bg-blue-700 active-tab">
            <i class="fas fa-door-open"></i>
            <span>Quản lý phòng</span>
          </button>
          <a href="/Admin/Kara/Gia" class="w-full flex items-center space-x-3 p-3 rounded-lg text-left hover:bg-blue-700">
            <i class="fas fa-tags"></i>
            <span>Cấu hình giá</span>
          </a>
          <a href="/Admin/Kara/Trangthai" class="w-full flex items-center space-x-3 p-3 rounded-lg text-left hover:bg-blue-700">
            <i class="fas fa-chart-bar"></i>
            <span>Trạng thái phòng</span>
          </a>
          <a href="/Admin/Kara/Lichsu" class="w-full flex items-center space-x-3 p-3 rounded-lg text-left hover:bg-blue-700">
            <i class="fas fa-history"></i>
            <span>Lịch sử sử dụng</span>
          </a>
        </div>
      </nav>
      
      <div class="mt-auto pt-4 border-t border-blue-700 pb-16">
        <div class="flex items-center space-x-3 px-2 py-3 rounded-lg bg-blue-900">
          <img src="https://storage.googleapis.com/workspace-0f70711f-8b4e-4d94-86f1-2a93ccde5887/image/2e37b4f6-1d19-4331-b5f5-ad699657bb48.png" alt="User profile picture" class="rounded-full w-12 h-12 border-2 border-blue-400 shadow">
          <div>
            <div class="font-semibold text-lg leading-tight">Admin</div>
            <div class="text-xs text-blue-200 italic">Quản trị viên</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Main Content Area -->
    <div class="ml-64 flex-1 overflow-auto p-6">
      <!-- Room Management Section -->
      <div>
        <div class="flex justify-between items-center mb-6">
          <h2 class="text-2xl font-bold text-gray-800">Quản lý phòng</h2>
          <button onclick="openRoomModal()" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg flex items-center space-x-2">
            <i class="fas fa-plus"></i>
            <span>Thêm phòng mới</span>
          </button>
        </div>
        
        <div class="bg-white rounded-lg shadow overflow-hidden">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Mã phòng</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tên phòng</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Sức chứa</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Trạng thái</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Giá tối thiểu</th>
                <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Thao tác</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <tr>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">KR101</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">VIP Room 1</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">8</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <span class="status-indicator status-available"></span>
                  Available
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">$25/hr</td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <button class="text-blue-600 hover:text-blue-900 mr-3">Sửa</button>
                  <button class="text-red-600 hover:text-red-900">Xóa</button>
                </td>
              </tr>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">KR102</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">VIP Room 2</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">10</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <span class="status-indicator status-occupied"></span>
                  Occupied
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">$30/hr</td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <button class="text-blue-600 hover:text-blue-900 mr-3">Sửa</button>
                  <button class="text-red-600 hover:text-red-900">Xóa</button>
                </td>
              </tr>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">KR201</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">Deluxe Room</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">6</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <span class="status-indicator status-reserved"></span>
                  Reserved
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">$20/hr</td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <button class="text-blue-600 hover:text-blue-900 mr-3">Sửa</button>
                  <button class="text-red-600 hover:text-red-900">Xóa</button>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

      <!-- Room Modal -->
      <div id="roomModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden">
        <div class="bg-white p-6 rounded-lg shadow-lg w-full max-w-md">
          <div class="flex justify-between items-center mb-4">
            <h3 class="text-xl font-bold">Thêm phòng mới</h3>
            <button onclick="closeRoomModal()" class="text-gray-500 hover:text-gray-700">
              <i class="fas fa-times"></i>
            </button>
          </div>
          <div class="space-y-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Mã phòng</label>
              <input type="text" class="border rounded w-full px-3 py-2">
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Tên phòng</label>
              <input type="text" class="border rounded w-full px-3 py-2">
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Sức chứa</label>
              <input type="number" class="border rounded w-full px-3 py-2">
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Giá cơ bản (VNĐ/giờ)</label>
              <input type="number" class="border rounded w-full px-3 py-2">
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Mô tả</label>
              <textarea class="border rounded w-full px-3 py-2"></textarea>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Loại phòng</label>
              <select class="border rounded w-full px-3 py-2">
                <option>VIP</option>
                <option>Deluxe</option>
                <option>Tiêu chuẩn</option>
                <option>Party</option>
              </select>
            </div>
            <div class="pt-4 border-t">
              <button class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg w-full">Lưu phòng</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
@section Scripts {
  <script src="~/js/kara-admin.js"></script>
}