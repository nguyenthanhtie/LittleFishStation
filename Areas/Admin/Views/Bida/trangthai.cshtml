@{
    Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Theo dõi Trạng thái Bida";
}

<div class="flex h-screen">
    <!-- Sidebar Navigation -->
    <div class="w-64 bg-blue-800 text-white flex flex-col fixed top-0 left-0 h-full">
        <h1 class="text-2xl font-bold mb-6 text-center">Quản Lý Bida</h1>
        <nav class="flex-1">
            <div class="space-y-2">
                <a href="/Admin/Bida/Ban" class="w-full flex items-center space-x-3 p-3 rounded-lg text-left hover:bg-blue-700">
                    <i class="fas fa-table"></i>
                    <span>Quản lý Bàn Bida</span>
                </a>
                <a href="/Admin/Bida/Gia" class="w-full flex items-center space-x-3 p-3 rounded-lg text-left hover:bg-blue-700">
                    <i class="fas fa-cog"></i>
                    <span>Cấu hình Giá</span>
                </a>
                <a href="/Admin/Bida/LichSu" class="w-full flex items-center space-x-3 p-3 rounded-lg text-left hover:bg-blue-700">
                    <i class="fas fa-history"></i>
                    <span>Lịch sử Sử dụng</span>
                </a>
                <button class="w-full flex items-center space-x-3 p-3 rounded-lg text-left hover:bg-blue-700 active-tab">
                    <i class="fas fa-eye"></i>
                    <span>Theo dõi Trạng thái</span>
                </button>
            </div>
        </nav>
        <div class="mt-auto pt-4 border-t border-blue-700 pb-16">
            <div class="flex items-center space-x-3 px-2 py-3 rounded-lg bg-blue-900">
                <img src="https://storage.googleapis.com/workspace-0f70711f-8b4e-4d94-86f1-2a93ccde5887/image/2e37b4f6-1d19-4331-b5f5-ad699657bb48.png" alt="User profile picture" class="rounded-full w-12 h-12 border-2 border-blue-400 shadow">
                <div>
                    <div class="font-semibold text-lg leading-tight">Admin</div>
                    <div class="text-xs text-blue-200 italic">Quản trị viên</div>
                </div>
            </div>
        </div>
    </div>
    <!-- Main Content Area -->
    <div class="ml-64 flex-1 overflow-auto p-6">
        <!-- Theo dõi Trạng thái -->
        <div>
            <div class="bg-white rounded-lg shadow p-6 mb-6">
                <h3 class="text-lg font-semibold mb-6">Tổng quan trạng thái bàn</h3>
                <div id="statusMonitorSummary" class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-6">
                    <!-- Nội dung sẽ được render bằng JS -->
                </div>
                <div class="flex flex-wrap gap-2 mb-4">
                    <button class="px-4 py-2 rounded bg-gray-200 text-gray-800 hover:bg-gray-300" onclick="filterStatusMonitor('Tất cả')">Tất cả</button>
                    <button class="px-4 py-2 rounded bg-green-100 text-green-800 hover:bg-green-200" onclick="filterStatusMonitor('Trống')">Trống</button>
                    <button class="px-4 py-2 rounded bg-yellow-100 text-yellow-800 hover:bg-yellow-200" onclick="filterStatusMonitor('Đặt trước')">Đặt trước</button>
                    <button class="px-4 py-2 rounded bg-red-100 text-red-800 hover:bg-red-200" onclick="filterStatusMonitor('Đang sử dụng')">Đang sử dụng</button>
                </div>
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200" id="statusMonitorTable">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Số bàn</th>
                                <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Loại</th>
                                <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Trạng thái</th>
                                <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Giá</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Nội dung sẽ được render bằng JS -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/Admin/bia-admin.js"></script>
}