<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cấu hình Giá Bida</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="~/css/Admin.css">
  <style>
    /* ...existing style... */
    .nav-button.active {
  background-color: #0d6efd;
  color: #fff !important;
  border-radius: 0.375rem;
}
  </style>
</head>
<body>
<header class="admin-header bg-white shadow-sm py-2 px-4 mb-4">
  
  <div class="container-fluid">
    <div class="row align-items-center">
      <!-- Brand logo and name - left side -->
      <div class="col-auto d-flex align-items-center">
        <span class="brand-name fw-bold fs-4 text-primary">BiDa Master</span>
      </div>
      <!-- Search box and nav buttons - center -->
      <div class="col d-flex align-items-center justify-content-center">
        <div class="nav-buttons-container d-flex me-3">
          <a href="/Admin/Kara/DanhSachPhong" class="nav-button ">Phòng Karaoke</a>
          <a href="/Admin/Bida/Ban" class="nav-button">Phòng Bida</a>
          <a href="/Admin/Menu/Menu" class="nav-button">Món ăn</a>
          <a href="/Admin/Nhanvien/Nhanvien" class="nav-button">Nhân viên</a>
         
        </div>
        <div class="search-container position-relative ms-3">
          <input type="text" class="form-control search-box" placeholder="Tìm kiếm..." style="min-width:180px;">
        </div>
      </div>
      <!-- Right side controls -->
      <div class="col-auto d-flex align-items-center justify-content-end">
        <!-- Fullscreen button -->
        <button class="fullscreen-btn btn btn-outline-secondary me-2" id="fullscreenBtn" title="Toàn màn hình">
          <i class="fas fa-expand"></i>
        </button>
        <!-- Admin dropdown (placeholder) -->
      </div>
    </div>
  </div>
</header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/wwwroot/js/Admin/header.js" asp-append-version="true"></script>

    <script>
      $(function() {
        var path = window.location.pathname.toLowerCase();
        $('.nav-button').each(function() {
          var href = $(this).attr('href').toLowerCase();
          if (
            (path.startsWith('/admin/kara') && href.includes('/admin/kara')) ||
            (path.startsWith('/admin/bida') && href.includes('/admin/bida')) ||
            (path.startsWith('/admin/menu') && href.includes('/admin/menu')) ||
            (path.startsWith('/admin/nhanvien') && href.includes('/admin/nhanvien'))
          ) {
            $(this).addClass('active');
          }
        });
      });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
